
<div class="transitions-enabled" id="subs">

  <% @subjects.each do |subject| %>

    <div class="box panel panel-default">
    
      <div class="substext">
      <h2>
        <%= link_to(truncate(subject.title, length:100), subject) %>
      </h2>

      <p>
        <%= simple_format(truncate(subject.description, length:500)) %>
      </p>
      </div>

      <% Post.where(subject_id: subject.id).order('id DESC').limit(3).each do |post| %>
        <%= link_to (image_tag(post.image.url, id:"subsimg")), subject_post_path(post.subject, post) %> 
      <% end %>

    </div>
  <% end %>
</div>

<br>
<br>

<div class = "text-center">
  <%= will_paginate @subjects, renderer: BootstrapPagination::Rails %>
</div>